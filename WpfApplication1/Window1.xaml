        mc:Ignorable="d"
        Title="Window1" Height="381.47" Width="858.786">
    <Grid Background="#FFD1D3FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="9*"/>
